<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" minWidth="400" alpha="0.7" backgroundColor="0x222222" addedToStage="init()">
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;

			private var interactionData:ArrayCollection = new ArrayCollection();
			private var scrollTimer:Timer;
			private var lastItem:Object;

			// sets up the component
			public function init():void {
				interactionHistory.dataProvider = interactionData;
				scrollTimer = new Timer(200);
				scrollTimer.addEventListener(TimerEvent.TIMER, makeLastItemVisible);
			}
	
			// scrolls the table all the way down in 200 ms
 			public function makeLastItemVisible(e:TimerEvent=null):void {
				scrollTimer.stop();
				interactionHistory.firstVisibleItem = lastItem;
			}
	
			// adds a row to the datagrid
			public function addData(interaction:String, details:String=""):void {
				var currTime:Date = new Date();
				var timeString:String = currTime.toTimeString();
				var item:Object = {Time:timeString, Interaction:interaction, Details:details};
				lastItem = item;
				interactionData.addItem(item);
				scrollTimer.start();
			}
			
			// does nothing for now
			// ideally, "replays" the item you select... i.e. copy blah, or navigate to blah...
			public function doubleClicked(event:MouseEvent):void {
				var item:Object = interactionHistory.selectedItem;
				if (item == null) {
					trace("Nothing Selected");
				} else {
					trace("Selected: " + item.Time + " " + item.Interaction + " " + item.Details);
				}
			}
		]]>
	</mx:Script>
	<mx:AdvancedDataGrid id="interactionHistory" color="#000000" width="100%" height="100%" focusEnabled="false" doubleClick="doubleClicked(event);" doubleClickEnabled="true">
		<mx:columns>
			<mx:AdvancedDataGridColumn headerText="Time" dataField="Time" width="96"/>
			<mx:AdvancedDataGridColumn headerText="Interaction" dataField="Interaction" width="170"/>
			<mx:AdvancedDataGridColumn headerText="Details" dataField="Details" width="330"/>
		</mx:columns>
	</mx:AdvancedDataGrid>
</mx:Canvas>
